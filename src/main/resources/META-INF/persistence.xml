<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.2">
    <persistence-unit name="agendamentoemailPU" transaction-type="JTA">
        <jta-data-source>java:/MySQLDS</jta-data-source> <!-- Certifique-se de que este datasource esteja configurado no WildFly -->
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
